datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Professor {
  id                  String  @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  title               String
  department          String
  researchTitle       String?
  researchDescription String?
  similarity          Int?
  prompt              String?
  embedding           Json[]
}

model Class {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  className        String
  professorName    String
  classCode        String
  classExplanation String
  embedding        Json[]
  similarity       Int?
  prompt           String?
}

model Club {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  explanation String
  embedding   Json[]
  similarity  Int?
  prompt      String?
}
