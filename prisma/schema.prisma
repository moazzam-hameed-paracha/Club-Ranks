datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Professor {
  id                  String  @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  title               String
  department          String
  researchTitle       String?
  researchDescription String?
  similarity          Int?
  prompt              String?
  embedding           Json[]
}

model Class {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  className        String
  professorName    String
  classCode        String
  classExplanation String
  embedding        Json[]
  similarity       Int?
  prompt           String?
}

model Club {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  explanation        String
  cleanedExplanation String
  embedding          Json[]
  similarity         Int?
  prompt             String?
}

model Analytics {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  resume    String
  results   Json[]
  timestamp DateTime @default(now())
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}